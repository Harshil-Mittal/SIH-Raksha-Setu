# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Translation API Configuration
# Using LibreTranslate (free alternative to Google Translate)
LIBRETRANSLATE_URL=https://libretranslate.de
LIBRETRANSLATE_API_KEY=

# Google Translate API (if you want to use it instead)
GOOGLE_TRANSLATE_API_KEY=

# Text-to-Speech Configuration
# Using Web Speech API (browser-based) or external service
TTS_PROVIDER=web_speech

# Speech-to-Text Configuration
STT_PROVIDER=web_speech

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
